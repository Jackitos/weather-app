---
const { currentTemp, minTemp, maxTemp, humidity, windSpeed } = Astro.props;
---

<div class="flex flex-col h-full mt-[51px] w-full">
	<div
		class="flex flex-row w-full items-center gap-10 text-white justify-between"
	>
		<div class="flex flex-row text-7xl">
			<p>{currentTemp}</p>
			<p>°</p>
		</div>
		<div class="text-lg">
			<div class="flex flex-row gap-1">
				<p>h:</p>
				<p>{maxTemp}°</p>
			</div>
			<div class="flex flex-row gap-1">
				<p>l:</p>
				<p>{minTemp}°</p>
			</div>
		</div>
	</div>
	<div
		class="text-white mt-5 flex flex-row gap-1 bg-[rgb(255,255,255,0.03)] p-2 rounded-lg text-lg items-center"
	>
		<i class="fa-solid fa-water"></i>
		<p>Humidity:</p>
		<p class="text-white/75">{humidity}%</p>
	</div>

	<div
		class="text-white mt-5 flex flex-row gap-1 bg-[rgb(255,255,255,0.03)] p-2 rounded-lg text-lg items-center"
	>
		<i class="fa-solid fa-wind"></i>
		<p>Wind:</p>
		<p class="text-white/75">{Math.round(windSpeed)} km/h</p>
	</div>
</div>

<style>
	.appear {
		opacity: 0;
		transform: translateY(20px);
		transition:
			opacity 0.6s ease,
			transform 0.6s ease;
	}

	.appear-active {
		opacity: 1;
		transform: translateY(0);
	}
</style>

<script>
	const elementsToAnimate = document.querySelectorAll(".appear");

	document.addEventListener("DOMContentLoaded", () => {
		elementsToAnimate.forEach((el) => {
			setTimeout(() => {
				el.classList.add("appear-active");
			}, 200);
		});
	});
</script>
